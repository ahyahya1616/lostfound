<div id="objectModal" class="fixed inset-0 z-50 hidden modal-overlay justify-center items-center p-4">
    <div class="modal-content bg-white rounded-xl shadow-2xl w-full max-w-3xl max-h-[90vh] overflow-y-auto">
        <div class="bg-gradient-to-r from-teal-500 to-cyan-600 text-white p-6 rounded-t-xl flex justify-between items-center">
            <h2 class="text-2xl font-bold">Ajouter un Nouvel Objet</h2>
            <button 
                onclick="closeModal()"
                class="text-white hover:bg-white/20 rounded-full p-2 transition-colors"
            >
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>
        </div>

        {{ form_start(form, {'attr': {
            'class': 'p-6 space-y-6', 
            'id': 'object-form',
            'novalidate': 'novalidate',
            'enctype': 'multipart/form-data',  
            'method': 'POST',
            'data-url': path('app_add_object')  
        }}) }}

        <div class="grid md:grid-cols-2 gap-4">
            <div>
                {{ form_label(form.title, 'Nom de l\'objet', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(form.title, {'attr': {'class': 'mt-1 block w-full border text-black dark:text-white rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-2 focus:ring-teal-500'}}) }}
            </div>

            <div>
                {{ form_label(form.category, 'Catégorie', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(form.category, {'attr': {'class': 'mt-1 block w-full border text-black dark:text-white rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-2 focus:ring-teal-500'}}) }}
              </div>
        </div>

        <div>
            {{ form_label(form.description, 'Description détaillée', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.description, {'attr': {'class': 'mt-1 block w-full border text-black dark:text-white rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-2 focus:ring-teal-500 h-24'}}) }}
        </div>

        <div class="grid md:grid-cols-2 gap-4">
            <div>
                {{ form_label(form.location, 'Lieu', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(form.location, {'attr': {'class': 'mt-1 block w-full border text-black dark:text-white rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-2 focus:ring-teal-500'}}) }}
            </div>

            <div>
                {{ form_label(form.objectType, 'Type d\'objet', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(form.objectType, {'attr': {'class': 'mt-1 block w-full border text-black dark:text-white rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-2 focus:ring-teal-500'}}) }}
            </div>
        </div>

        <div class="grid md:grid-cols-2 gap-4">
            <div>
                {{ form_label(form.latitude, 'Latitude', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(form.latitude, {'attr': {'class': 'mt-1 block w-full border text-black dark:text-white rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-2 focus:ring-teal-500'}}) }}
            </div>

            <div>
                {{ form_label(form.longitude, 'Longitude', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(form.longitude, {'attr': {'class': 'mt-1 block w-full border text-black dark:text-white rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-2 focus:ring-teal-500'}}) }}
            </div>
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Images</label>
            <div id="dropZone" class="dropzone border-2 border-dashed border-gray-300 rounded-lg p-6 text-center cursor-pointer hover:border-teal-500 transition-colors">
                <div class="space-y-2">
                    <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48">
                        <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                    </svg>
                    <p class="text-sm text-gray-600">
                        <span class="font-semibold text-teal-600">Cliquez pour télécharger</span> ou glissez et déposez
                    </p>
                    <p class="text-xs text-gray-500">PNG, JPG, WEBP (max. 10MB)</p>
                </div>
                <input type="file" id="images" name="images[]" multiple accept="image/*" class="hidden" />
            </div>
            
            <div id="imagePreview" class="grid grid-cols-3 md:grid-cols-5 gap-4 mt-4"></div>
        </div>

        <div class="flex justify-end space-x-4 mt-6 p-6 bg-gray-50 rounded-b-xl">
            <button 
                type="button" 
                onclick="closeModal()"
                class="px-4 py-2 bg-gray-200 text-gray-800 rounded-md hover:bg-gray-300 transition-colors"
            >
                Annuler
            </button>
            <button 
                type="submit" 
                class="px-4 py-2 bg-teal-500 text-white rounded-md hover:bg-teal-600 transition-colors"
            >
                Ajouter l'Objet
            </button>
        </div>

        {{ form_end(form) }}
    </div>
</div>