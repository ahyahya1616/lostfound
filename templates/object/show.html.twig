{% extends 'base.html.twig' %}

{% block title %}{{ object.title }}{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <article class="bg-white rounded-lg shadow-md overflow-hidden">
        <header class="flex items-center p-4 border-b border-gray-200">
            <img src="{{ asset('/uploads/profile/profile2.jpeg') }}" alt="Avatar" class="w-10 h-10 rounded-full mr-3">
            <div>
                <div class="font-semibold text-gray-800">{{ object.user.fullName }}</div>
                <div class="text-gray-500 text-sm">
                    {{ object.createdAt|date('d M Y à H:i') }}
                    <span class="ml-2 px-2 py-1 rounded-full text-xs font-semibold {{ object.status.value == 'PERDU' ? 'bg-red-100 text-red-600' : 'bg-green-100 text-green-600' }}">
                        {{ object.status.value == 'perdu' ? 'Perdu' : 'Trouvé' }}
                    </span>
                </div>
            </div>
        </header>

        <div class="p-4">
            <h1 class="text-2xl font-semibold text-gray-900 mb-4">{{ object.title }}</h1>
            <p class="text-gray-700 mb-4">{{ object.description }}</p>

            {% if object.imageFiles|length > 0 %}
                <div class="mb-4">
                    {% for image in object.imageFiles %}
                        <img src="{{ asset(image.filePath) }}" alt="{{ object.title }}" class="w-full h-auto rounded-lg mb-2">
                    {% endfor %}
                </div>
            {% endif %}

            <div class="flex items-center text-gray-600">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                </svg>
                {{ object.location }}
            </div>
        </div>
    </article>
</div>
{% endblock %}